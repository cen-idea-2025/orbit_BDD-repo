{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "target": "ES2016",
    "lib": ["es6"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true


  },
  "exclude": [
    "node_modules"
  ]
}