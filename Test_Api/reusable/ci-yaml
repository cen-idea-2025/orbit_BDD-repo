name: Crucible UI Cypress Tests

on:
  push:
    branches:
      - main
      - develop
  pull_request:
    branches:
      - main
  release:
    types: [created]

jobs:
  cypress-run:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      - name: Install Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
      - name: Restore dependencies
        run: cd bdd_api_tests && npm install
      - name: Cypress run on Chrome
        uses: cypress-io/github-action@v6
        with:
          working-directory: Test_Api
          browser: chrome
          install: true
          command: npm run cy:run:chrome
      - name: Cypress run on Edge
        uses: cypress-io/github-action@v6
        with:
          working-directory: Test_Api
          browser: edge
          install: true
          command: npm run cy:run:edge
      - name: Cypress run on Firefox
        uses: cypress-io/github-action@v6
        with:
          working-directory: Test_Api
          browser: firefox
          install: true
          command: npm run cy:run:firefox
